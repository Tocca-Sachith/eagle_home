generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String
  password      String
  role          String    @default("USER") // USER, ADMIN, INVESTOR
  isActive      Boolean   @default(true)
  lastLogin     DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  createdBy     String?
  
  // Relationship with Investor
  investor      Investor?

  @@index([email])
  @@index([role])
}

model Inquiry {
  id              String   @id @default(cuid())
  fullName        String
  country         String?
  email           String
  phone           String?
  serviceType     String
  hasLand         Boolean?
  desiredLocation String?
  budgetRange     String?
  message         String?
  createdAt       DateTime @default(now())

  @@index([createdAt])
}

model Customer {
  id             String   @id @default(cuid())
  customerNumber String   @unique // Auto-generated customer number
  fullName       String
  email          String?
  phone          String?
  address        String?
  country        String?
  isOverseas     Boolean  @default(false)
  notes          String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  projects       Project[]

  @@index([customerNumber])
  @@index([email])
}

model Project {
  id              String   @id @default(cuid())
  title           String
  description     String?  @db.Text
  location        String?
  projectType     String
  status          String   @default("PLANNING") // PLANNING, IN_PROGRESS, COMPLETED, ON_HOLD
  
  // Financial
  budgetTotal     Float?
  actualCost      Float?
  
  // Dates
  contractDate    DateTime?
  startDate       DateTime?
  endDatePlanned  DateTime?
  actualEndDate   DateTime?
  
  // Relationships
  customerId      String?
  customer        Customer? @relation(fields: [customerId], references: [id], onDelete: SetNull)
  
  investorName    String?
  investorContact String?
  
  // Display on homepage
  thumbnailImage  String?  // Main thumbnail for homepage
  isPublished     Boolean  @default(false) // Show on homepage
  displayOrder    Int      @default(0)
  
  // Progress tracking
  progressPercent Int      @default(0)
  currentPhase    String?  // e.g., "Foundation", "Framing", "Finishing"
  notes           String?  @db.Text
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  images          ProjectImage[]
  investors       ProjectInvestor[]
  expenses        ProjectExpense[]

  @@index([status])
  @@index([createdAt])
  @@index([isPublished])
  @@index([displayOrder])
}

model ProjectImage {
  id          String   @id @default(cuid())
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  imagePath   String
  caption     String?
  phase       String?  // e.g., "Before", "During", "After", "Foundation", "Framing"
  displayOrder Int     @default(0)
  uploadedAt  DateTime @default(now())
  
  @@index([projectId])
  @@index([displayOrder])
}

model HeroImage {
  id          String   @id @default(cuid())
  title       String
  imagePath   String   // Path to the image file
  altText     String?
  width       Int      @default(1920)
  height      Int      @default(1080)
  displayOrder Int     @default(0)  // Order for carousel
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([isActive])
  @@index([displayOrder])
}

model Service {
  id          String   @id @default(cuid())
  title       String
  description String   @db.Text
  category    String   // e.g., "construction", "design", "consultation"
  icon        String?  // Emoji or icon identifier
  imagePath   String?  // Optional service image
  displayOrder Int     @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([isActive])
  @@index([category])
  @@index([displayOrder])
}

model Investor {
  id             String   @id @default(cuid())
  investorNumber String   @unique // Auto-generated investor number
  fullName       String
  email          String?
  phone          String?
  country        String?
  address        String?
  profileImage   String?  // Path to profile image
  notes          String?  @db.Text
  isActive       Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  
  // User account relationship (one-to-one)
  userId         String?  @unique
  user           User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  
  // Projects relationship (many-to-many)
  projects       ProjectInvestor[]

  @@index([investorNumber])
  @@index([email])
  @@index([isActive])
  @@index([userId])
}

// Junction table for Project-Investor many-to-many relationship
model ProjectInvestor {
  id          String   @id @default(cuid())
  projectId   String
  investorId  String
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  investor    Investor @relation(fields: [investorId], references: [id], onDelete: Cascade)
  assignedAt  DateTime @default(now())
  investmentAmount Float?
  
  @@unique([projectId, investorId])
  @@index([projectId])
  @@index([investorId])
}

model ProjectExpense {
  id          String   @id @default(cuid())
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  // e.g., "Foundation", "Bathroom", "Painting", etc.
  phase       String?
  // Optional finer classification, e.g., "Materials", "Labor"
  category    String?
  // Short label for the expense item
  item        String
  amount      Float
  currency    String   @default("USD")
  expenseDate DateTime?
  notes       String?  @db.Text

  createdAt   DateTime @default(now())

  @@index([projectId])
  @@index([phase])
  @@index([expenseDate])
}

